<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Wise_Time_Management.dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorControlActivated">#6EBEF0</item>
        <item name="colorAccent">#6EBEF0</item>
        <item name="colorSecondary">@color/background_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/background_blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="TimeChooser" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
        <item name="android:textColorPrimary">#BFBFBF</item>
        <item name="android:textColor">#BFBFBF</item>
        <item name="android:background">#272727</item>
        <item name="android:colorControlNormal">#6EBEF0</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimeChooserButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TimeChooserButtonStyle</item>
    </style>
    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:background">#272727</item>
        <item name="android:colorPrimary">#BFBFBF</item>
        <item name="android:numbersInnerTextColor">#BFBFBF</item>
        <item name="android:textColor">#BFBFBF</item>
    </style>
    <style name="TimeChooserButtonStyle">
        <item name="android:backgroundTint">#272727</item>
        <item name="android:textColor">#6EBEF0</item>
    </style>

    <style name="DateChooser" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:textColorPrimary">#BFBFBF</item>
        <item name="android:textColor">#BFBFBF</item>
        <item name="android:background">#272727</item>
        <item name="android:colorControlNormal">#6EBEF0</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DateButtonStyle</item>
        <item name="android:buttonBarButtonStyle">@style/DateButtonStyle</item>
        <item name="android:headerBackground">#BFBFBF</item>
        <item name="android:titleTextColor">#BFBFBF</item>
        <item name="android:calendarTextColor">#6EBEF0</item>
        <item name="android:dayOfWeekBackground">#BFBFBF</item>
        <item name="android:dayOfWeekTextAppearance">@style/CustomDayOfWeekTextAppearance</item>
        <item name="android:selectedWeekBackgroundColor">#6EBEF0</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:background">#272727</item>
        <item name="android:colorPrimary">#BFBFBF</item>
        <item name="android:numbersInnerTextColor">#BFBFBF</item>
        <item name="android:textColor">#BFBFBF</item>
    </style>
    <style name="CustomDayOfWeekTextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DateButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#6EBEF0</item>
    </style>
</resources>